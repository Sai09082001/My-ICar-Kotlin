<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginStart="11.5dp"
        android:background="@drawable/bg_dash_line"
        android:minHeight="45dp" />

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="top"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginTop="@dimen/d_10"
        android:layout_marginBottom="@dimen/d_5"
        android:background="@drawable/bg_orange_radius"
        android:backgroundTint="@color/colorOrange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/d_10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="06:34 - Đang dừng đỗ - 0 km/h"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_10"
            android:layout_marginEnd="@dimen/d_20"
            android:background="@drawable/bg_orange_radius"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/colorOrange"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/d_10"
            android:text="Unnamed Road, Hoa Binh, Binh Gia, Lang Son, Viet Nam"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
